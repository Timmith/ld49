    "three-bmfont-text": "^2.3.0",
    "threejs-camera-controller-first-person-desktop": "^5.0.1",
    "zzfx": "^1.1.8"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^5.0.4",
