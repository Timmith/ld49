    "prettier-check": "^2.0.0",
    "raw-loader": "^1.0.0",
    "serve": "^10.0.0",
    "source-map-loader": "^0.2.4",
    "terser-webpack-plugin": "^1.1.0",
    "ts-loader": "^5.3.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
